<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tv_result"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_Add"
        android:background="#242424"
        android:gravity="right|bottom"
        android:ellipsize="end"
        android:lines="10"
        android:text="@string/ans"
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_CE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/tv_result"
        android:layout_below="@+id/tv_result"
        android:layout_alignBottom="@id/btn_Add"
        android:layout_alignTop="@id/btn_Add"
        android:background="#B8B8B8"
        android:text="@string/ce" />
   
    <Button
        android:id="@+id/btn_Add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_Sub"
        android:background="#3399FF"
        android:text="@string/add" />
    
    <Button
        android:id="@+id/btn_Backspace"
		android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:layout_toRightOf="@+id/btn_CE"
        android:layout_alignBottom="@id/btn_CE"
        android:layout_alignTop="@id/btn_Add"
        android:background="#B8B8B8"
        android:text="@string/backspace" />
    
    <Button
        android:id="@+id/btn_complex"
		android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:layout_toRightOf="@+id/btn_Backspace"
        android:layout_toLeftOf="@+id/btn_Add"
        android:layout_alignBottom="@id/btn_CE"
        android:layout_alignTop="@id/btn_Add"
        android:background="#B8B8B8"
        android:text="@string/complex"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_CE"
        android:layout_alignLeft="@id/btn_CE"
        android:layout_alignTop="@id/btn_2"
        android:background="#B8B8B8"
        android:text="@string/one" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_CE"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_alignTop="@id/btn_3"
        android:background="#B8B8B8"
        android:text="@string/two" />
    
    <Button
        android:id="@+id/btn_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Backspace"
        android:layout_alignTop="@id/btn_Sub"
        android:layout_toLeftOf="@+id/btn_Add"
        android:layout_toRightOf="@+id/btn_2"
        android:background="#B8B8B8"
        android:text="@string/three" />
    
    <Button
        android:id="@+id/btn_4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_1"
        android:layout_alignRight="@+id/btn_1"
        android:layout_above="@id/btn_7"
        android:background="#B8B8B8"
        android:text="@string/four" />
    
    <Button
        android:id="@+id/btn_5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_4"
        android:background="#B8B8B8"
        android:text="@string/five" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_5"
        android:layout_alignBottom="@+id/btn_5"
        android:layout_alignLeft="@+id/btn_3"
        android:layout_alignRight="@+id/btn_3"
        android:background="#B8B8B8"
        android:text="@string/six" />

    <Button
        android:id="@+id/btn_Sub"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_Mul"
        android:layout_alignLeft="@+id/btn_Add"
        android:layout_alignRight="@+id/btn_Add"
        android:background="#3399FF"
        android:text="@string/sub" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_4"
        android:layout_alignRight="@+id/btn_4"
        android:layout_above="@id/btn_point"
        android:background="#B8B8B8"
        android:text="@string/sev" />
    
    <Button
        android:id="@+id/btn_8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_5"
        android:layout_alignRight="@+id/btn_5"
        android:layout_alignTop="@+id/btn_7"
        android:background="#B8B8B8"
        android:text="@string/eight" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_6"
        android:layout_alignRight="@+id/btn_6"
        android:layout_alignLeft="@+id/btn_6"
        android:background="#B8B8B8"
        android:text="@string/nine" />
    
    <Button
        android:id="@+id/btn_Mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_Div"
        android:layout_alignLeft="@+id/btn_Sub"
        android:layout_alignRight="@+id/btn_Sub"
        android:background="#3399FF"
        android:text="@string/mul" />

    <Button
        android:id="@+id/btn_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_7"
        android:layout_alignRight="@+id/btn_7"
        android:layout_above="@id/btn_Lbra"
        android:background="#B8B8B8"
        android:text="@string/point" />
    
    <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_point"
        android:layout_alignBottom="@+id/btn_point"
        android:layout_alignLeft="@+id/btn_8"
        android:layout_alignRight="@+id/btn_8"
        android:background="#B8B8B8"
        android:text="@string/zero" />
  
    <Button
        android:id="@+id/btn_Square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_point"
        android:layout_alignRight="@+id/btn_9"
        android:layout_toRightOf="@+id/btn_0"
        android:background="#B8B8B8"
        android:text="@string/btn_Square" />

    <Button
        android:id="@+id/btn_Lbra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_point"
        android:layout_alignRight="@+id/btn_point"
        android:layout_alignParentBottom="true"
        android:background="#B8B8B8"
        android:text="@string/btn_Lbra" />

    <Button
        android:id="@+id/btn_Rbra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_Lbra"
        android:layout_alignRight="@+id/btn_0"
        android:layout_toRightOf="@+id/btn_Lbra"
        android:background="#B8B8B8"
        android:text="@string/btn_Rbra" />

    <Button
        android:id="@+id/btn_Sqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_Lbra"
        android:layout_alignLeft="@+id/btn_Square"
        android:layout_alignRight="@+id/btn_Square"
        android:background="#B8B8B8"
        android:text="@string/sqrt" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Div"
        android:layout_alignLeft="@+id/btn_Div"
        android:layout_alignRight="@+id/btn_Div"
        android:layout_alignBottom="@+id/btn_Lbra"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/equal" />

    <Button
        android:id="@+id/btn_Div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Square"
        android:layout_alignLeft="@+id/btn_Mul"
        android:layout_alignParentRight="true"
        android:background="#3399FF"
        android:text="@string/div" />

</RelativeLayout>